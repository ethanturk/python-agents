{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "description": "Node.js serverless backend for python-agents",
  "type": "module",
  "scripts": {
    "dev": "pnpm run typecheck && echo 'Backend serverless - use Vercel preview for testing'",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"api/**/*.ts\" \"api/*/index.ts\"",
    "lint:fix": "eslint \"api/**/*.ts\" \"api/*/index.ts\" --fix",
    "format": "prettier --write \"api/**/*.ts\" \"api/*/index.ts\"",
    "format:check": "prettier --check \"api/**/*.ts\" \"api/*/index.ts\"",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.10.0",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.52.0",
    "vercel": "^50.1.6",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.17.0",
    "@fastify/cors": "^8.4.0",
    "@supabase/supabase-js": "^2.38.0",
    "fastify": "^4.24.0",
    "firebase-admin": "^12.0.0",
    "openai": "^4.20.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.2.0",
    "sql.js": "^1.10.0",
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
