{
  "version": 2,
  "buildCommand": "pnpm run build",
  "builds": [
    {
      "src": "agent/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "documents/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "summaries/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "notifications/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/agent/(.*)",
      "dest": "/agent/index.ts"
    },
    {
      "src": "/api/documents/(.*)?",
      "dest": "/documents/index.ts"
    },
    {
      "src": "/api/summaries/(.*)?",
      "dest": "/summaries/index.ts"
    },
    {
      "src": "/api/poll",
      "dest": "/notifications/index.ts"
    },
    {
      "src": "/api/notifications/(.*)?",
      "dest": "/notifications/index.ts"
    },
    {
      "src": "/health",
      "dest": "/agent/index.ts"
    }
  ]
}
