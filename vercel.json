{
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/.next",
  "installCommand": "npm install --prefix frontend && npm install",
  "framework": null,
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/agent/summaries",
      "destination": "/api/summaries"
    },
    {
      "source": "/agent/summary_qa",
      "destination": "/api/summaries"
    },
    {
      "source": "/agent/search_qa",
      "destination": "/api/summaries"
    },
    {
      "source": "/agent/summarize",
      "destination": "/api/summaries"
    },
    {
      "source": "/agent/documents",
      "destination": "/api/documents"
    },
    {
      "source": "/agent/documentsets",
      "destination": "/api/documents"
    },
    {
      "source": "/agent/upload",
      "destination": "/api/documents"
    },
    {
      "source": "/agent/documents/:filename",
      "destination": "/api/documents"
    },
    {
      "source": "/agent/files/:path*",
      "destination": "/api/documents"
    },
    {
      "source": "/agent/:path*",
      "destination": "/api/agent"
    },
    {
      "source": "/poll",
      "destination": "/api/notifications"
    },
    {
      "source": "/internal/notify",
      "destination": "/api/notifications"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        },
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "require-corp"
        }
      ]
    }
  ]
}
