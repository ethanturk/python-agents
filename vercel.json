{
  "$schema": "https://vercel.com/schemas/v1/config.json",
  "buildCommand": "cd frontend && npm run build",
  "devCommand": "cd frontend && npm run dev",
  "installCommand": "cd frontend && npm install",
  "outputDirectory": "frontend/dist",
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)\\.js$",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.css$",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.py"
    },
    {
      "source": "/agent/sync",
      "destination": "/api/agent/index.py"
    },
    {
      "source": "/agent/search",
      "destination": "/api/agent/index.py"
    },
    {
      "source": "/agent/async",
      "destination": "/api/agent/index.py"
    },
    {
      "source": "/agent/status/:path*",
      "destination": "/api/agent/index.py"
    },
    {
      "source": "/agent/upload",
      "destination": "/api/documents/index.py"
    },
    {
      "source": "/agent/documents",
      "destination": "/api/documents/index.py"
    },
    {
      "source": "/agent/documentsets",
      "destination": "/api/documents/index.py"
    },
    {
      "source": "/agent/documents/:path*",
      "destination": "/api/documents/index.py"
    },
    {
      "source": "/agent/files/:path*",
      "destination": "/api/documents/index.py"
    },
    {
      "source": "/agent/summaries",
      "destination": "/api/summaries/index.py"
    },
    {
      "source": "/agent/summary_qa",
      "destination": "/api/summaries/index.py"
    },
    {
      "source": "/agent/search_qa",
      "destination": "/api/summaries/index.py"
    },
    {
      "source": "/agent/summarize",
      "destination": "/api/summaries/index.py"
    },
    {
      "source": "/poll",
      "destination": "/api/notifications/index.py"
    },
    {
      "source": "/internal/notify",
      "destination": "/api/notifications/index.py"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
