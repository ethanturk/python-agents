{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "13629274865956588441"
    }
  },
  "parameters": {
    "taskData": {
      "type": "string",
      "metadata": {
        "description": "Task data JSON to process"
      }
    },
    "clientId": {
      "type": "string",
      "defaultValue": "default",
      "metadata": {
        "description": "Client ID for multi-tenancy"
      }
    },
    "acrName": {
      "type": "string",
      "metadata": {
        "description": "Azure Container Registry name"
      }
    },
    "imageTag": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Worker image tag"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Resource location"
      }
    },
    "acrPassword": {
      "type": "securestring",
      "metadata": {
        "description": "ACR password"
      }
    },
    "azureStorageConnectionString": {
      "type": "securestring",
      "metadata": {
        "description": "Azure Storage connection string"
      }
    },
    "supabaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Supabase URL"
      }
    },
    "supabaseKey": {
      "type": "securestring",
      "metadata": {
        "description": "Supabase key"
      }
    },
    "openaiApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "OpenAI API key"
      }
    },
    "cpuCores": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "CPU cores for the container"
      }
    },
    "memoryInGB": {
      "type": "int",
      "defaultValue": 2,
      "metadata": {
        "description": "Memory in GB for the container"
      }
    },
    "taskTimeout": {
      "type": "int",
      "defaultValue": 1800,
      "metadata": {
        "description": "Maximum execution time in seconds"
      }
    }
  },
  "variables": {
    "containerGroupName": "[format('worker-{0}', uniqueString(parameters('taskData')))]",
    "acrServer": "[format('{0}.azurecr.io', parameters('acrName'))]",
    "workerImage": "[format('{0}/worker:{1}', variables('acrServer'), parameters('imageTag'))]"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2023-05-01",
      "name": "[variables('containerGroupName')]",
      "location": "[parameters('location')]",
      "properties": {
        "containers": [
          {
            "name": "worker",
            "properties": {
              "image": "[variables('workerImage')]",
              "resources": {
                "requests": {
                  "cpu": "[parameters('cpuCores')]",
                  "memoryInGB": "[parameters('memoryInGB')]"
                },
                "limits": {
                  "cpu": "[parameters('cpuCores')]",
                  "memoryInGB": "[parameters('memoryInGB')]"
                }
              },
              "environmentVariables": [
                {
                  "name": "TASK_DATA",
                  "value": "[parameters('taskData')]"
                },
                {
                  "name": "CLIENT_ID",
                  "value": "[parameters('clientId')]"
                },
                {
                  "name": "WORKER_TASK_TIMEOUT",
                  "value": "[string(parameters('taskTimeout'))]"
                },
                {
                  "name": "AZURE_STORAGE_CONNECTION_STRING",
                  "secureValue": "[parameters('azureStorageConnectionString')]"
                },
                {
                  "name": "SUPABASE_URL",
                  "value": "[parameters('supabaseUrl')]"
                },
                {
                  "name": "SUPABASE_KEY",
                  "secureValue": "[parameters('supabaseKey')]"
                },
                {
                  "name": "OPENAI_API_KEY",
                  "secureValue": "[parameters('openaiApiKey')]"
                },
                {
                  "name": "OPENAI_API_BASE",
                  "value": "https://api.openai.com/v1"
                },
                {
                  "name": "OPENAI_MODEL",
                  "value": "gpt-4o-mini"
                },
                {
                  "name": "OPENAI_EMBEDDING_MODEL",
                  "value": "text-embedding-3-small"
                },
                {
                  "name": "OPENAI_EMBEDDING_DIMENSIONS",
                  "value": "1536"
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "restartPolicy": "Never",
        "imageRegistryCredentials": [
          {
            "server": "[variables('acrServer')]",
            "username": "[parameters('acrName')]",
            "password": "[parameters('acrPassword')]"
          }
        ]
      },
      "tags": {
        "purpose": "worker-task",
        "clientId": "[parameters('clientId')]"
      }
    }
  ],
  "outputs": {
    "containerGroupId": {
      "type": "string",
      "value": "[resourceId('Microsoft.ContainerInstance/containerGroups', variables('containerGroupName'))]"
    },
    "containerGroupName": {
      "type": "string",
      "value": "[variables('containerGroupName')]"
    }
  }
}
